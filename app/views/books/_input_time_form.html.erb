3<%= f.collection_select :time3, TimeTableWeek.find(1).time_table_days[0].time_table_times[2].subjects, :id, :title %><br>
4<%= f.collection_select :time4, TimeTableWeek.find(1).time_table_days[0].time_table_times[3].subjects, :id, :title %><br>
5<%= f.collection_select :time5, TimeTableWeek.find(1).time_table_days[0].time_table_times[4].subjects, :id, :title %><br>
